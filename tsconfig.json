{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "functions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
